<%- include ('partials/header.ejs') %>

    <body>
        <%- include ('partials/navbar.ejs') %>
            <div class="container">
                <hr>
                <h1>Perguntas</h1>
                <a href="/perguntar" class="btn btn-success">Fazer Pergunta</a>
                <hr>
                
                <% perguntas.forEach(pergunta=> { %>
                    <br>
                    <br>

                    <div class="card">
                        <div class="car-body"></div>
                        <h3>
                            <%= pergunta.titulo %>
                        </h3>
                    </div>
                    <div class="card-footer">
                        <h4>
                        <a href=/pergunta/<%= pergunta.id %>" class="btn btn-primary">Responder</a>
                        </h4>
                    </div>
                    <br>
                    <br>
                    <% }) %>
            </div>

    </body>
    <%- include ('partials/footer.ejs') %>