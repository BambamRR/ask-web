<%- include ('partials/header.ejs') %>

    <body>
        <%- include ('partials/navbar.ejs') %>
            <div class="container">
                <hr>      
                    <h1> <%= pergunta.titulo %></h1>
                    <p> <%= pergunta.descricao %></p>     
                    <hr>
                    <form action="/responder" method="post">
                        <h3>Responda</h3>
                        <label>Resposta: </label>
                        <textarea class="form-control" name="corpo" id="" placeholder="Digite sua resposta"></textarea><br>
                        <input type="hidden" name="pergunta" value="<%=pergunta.id%>">
                        <button class="btn btn-success" type="submit">Responder</button>
                    </form>   
                   <div class="">
                    <hr>
                    <h3>Respostas</h3>
                    <hr>
                    <% respostas.forEach(resposta => { %>
                    
                        <br>
                  <div class="card">
                    <div class="card-body">
                        <%= resposta.corpo %>
                    </div>
                  </div>
                    <% }); %>

                    
                   </div>     
            </div>


    </body>
    <%- include ('partials/footer.ejs') %>